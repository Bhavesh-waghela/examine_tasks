<div class="middle-container">
  <div align="center">
    <div id='progressbar1'></div>
    <div id='question_countdown_timer' value="20"></div>
  </div>
  <div>
    <div align="center">
      <% if session[:next_ques_value].to_i == 0 %>
        <p>The examination is about to start, so please stay focused and Best of luck for the exam!
      <% else %>
        <p>You have successfully completed a set of tasks, please wait for a while for the new set of task!</p>
      <% end %>  
    </div>
    </div>
</div>
<div class="img" align="center">
  <img src="/assets/new_image.gif" class="img-responsive gif_img" alt="Responsive image">
  <%= form_tag({:controller => "home", :action => "create_user_answers"}, :id => 'my-form') do %>
    <%= hidden_field_tag :static_form, false%>
    <%= submit_tag "Next", :class=>"btn btn-info hide" %>
  <% end%>
</div>